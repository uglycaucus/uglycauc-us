{
  "include": ["pages/**/*", "components/**/*", "util/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    // "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": ["node_modules"]
}
